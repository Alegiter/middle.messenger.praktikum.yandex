.avatar {
    @extend .flex;
    @extend .flex_centered;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    background-color: var(--primary-color);
    color: white;
    font-weight: bold;

    &_samll {
        width: 34px;
        height: 34px;
    }

    &_large {
        width: 120px;
        height: 120px;
        font-size: 56px;
    }

    &__image {
        width: 100%;
        height: 100%;
        border-radius: inherit;
    }
}
