.header {
    display: flex;
    padding-bottom: 10px;
    align-items: center;

    &_top-stick {
        left: 0;
        position: sticky;
        top: 0;
    }

    &__title {
        flex: 1 1 0%;
        font-weight: bold;
        font-size: var(--font-size-title);

        &_centered {
            text-align: center;
        }
    }
}
