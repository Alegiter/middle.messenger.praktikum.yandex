@import '../../../../core/components/avatar/avatar.pcss';

.editable-avatar {
    position: relative;

    &__change-img-button {
        @extend .flex;
        @extend .flex_centered;
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: var(--primary-color-light);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        cursor: pointer;
        color: white;
    }
}
