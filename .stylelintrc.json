{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "extend"
                ]
            }
        ],
        "indentation": 4,
        "declaration-empty-line-before": "never",
        "comment-empty-line-before": [
            "always",
            {
                "except": ["first-nested"],
                "ignoreComments": ["/todo/"]
            }
        ]
    }
}
